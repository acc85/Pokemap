<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="20dp"
    android:paddingEnd="0dp">
    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textStyle="bold"
        tools:text="EVEE"
       />
    <TextView
        android:id="@+id/dash"
        android:layout_toEndOf="@+id/pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        tools:text="-"
        />
    <TextView
        android:id="@+id/pokemonId"
        android:layout_toEndOf="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_toStartOf="@+id/mark_button"
        android:autoLink="web"
        android:linksClickable="true"
        tools:text="#100"/>
    <ImageButton
        android:id="@+id/mark_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_block_black_24dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/pokemonDisappearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/pokemonName"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="5dp"
        tools:text="Disappears in - 23:23:00"/>
    <TextView
        android:id="@+id/pokemonDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/pokemonDisappearText"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="5dp"
        tools:text="Distance to travel from current location - 200 meters"/>
    <Button
        android:id="@+id/add_to_filter_button"
        android:layout_below="@+id/pokemonDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_filter"
        android:layout_marginStart="10dp"
        style="?borderlessButtonStyle"/>
    <Button
        android:id="@+id/share_location_button"
        android:layout_below="@+id/pokemonDistanceText"
        android:layout_toEndOf="@+id/add_to_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_location"
        android:layout_marginStart="10dp"
        style="?borderlessButtonStyle"/>
</RelativeLayout>